body{
    background-color: rgba(231, 212, 247, 0.589);
    font-family: Arial, Helvetica, sans-serif;
    margin: 0 auto;
}
.titulo{
    background-color: rgb(226, 254, 255);
    display: grid;
    place-items: center;
    height: 60px;
    width: 100%;
}
.center{
    text-align: center;
}
.family{
    font-family: Georgia, 'Times New Roman', Times, serif;
    background-color: rgb(253, 250, 212);
}
.size{
    font-size: 20px;
    background-color: rgb(253, 250, 212);
}
.weight{
    font-weight: 700;
    background-color: rgb(253, 250, 212);
}
